{
  "manifest_version": 3,
  "name": "Scroll Lock Extension",
  "version": "1.0.0",
  "description": "Locks mouse scroll on specified pages",
  "permissions": [
    "storage",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
